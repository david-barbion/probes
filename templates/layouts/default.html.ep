<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
  <head>
    <base href="/" />
    <title><%= config->{title} %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="<%= url_for '/' %>css/style.css" title="Default" type="text/css" />
    <link rel="shortcut icon" href="<%= url_for '/' %>images/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" media="all" type="text/css" href="<%= url_for '/' %>css/jquery-ui.css" />
    <link rel="stylesheet" media="all" type="text/css" href="<%= url_for '/' %>css/auditools.css" />

    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.core.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.datepicker.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.mouse.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.draggable.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.sortable.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.ui.resizable.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.flot.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.flot.pie.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.flot.selection.js"></script>
    <script type="text/javascript" src="<%= url_for '/' %>js/jquery.flot.stack.js"></script>

  </head>

  <body>
    <div id="page">
      <div id="header">
        <div id="logo">
          <h1><a href="<%= url_for '/' %>" title="<%= config->{title} %>"><%= config->{title} %></a></h1>
        </div>
        <div id="menu">
          <ul>
            <li><a href="<%= url_for '/' %>" title="Results">Results</a></h1>
            <li><a href="<%= url_for 'probes_list' %>" title="Probes">Probes</a></h1>
          </ul>
        </div>
      </div> <!-- header -->

      <div id="content">

        <%= display_messages %>

        <%= content %>

	<div style="clear: both;"></div>
      </div> <!-- content -->

      <div id="footer">
        <p class="copyright">Copyright &copy; 2012 <a href="http://orgrim.net" title="orgrim">Nicolas Thauvin</a></p>
        <p class="powered-by">powered by <a href="http://www.mojolicious.org" title="mojolicious web framework">mojolicious</a></p>
      </div> <!-- footer -->
    </div> <!-- page -->
  </body>
</html>
